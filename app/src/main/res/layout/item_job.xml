<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="40dp"
        app:cardCornerRadius="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f178b6">

            <ImageView
                android:id="@+id/ivlogo"
                android:layout_width="91dp"
                android:layout_height="82dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tvjobtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="2dp"
                android:padding="2dp"
                android:text="Android App developer"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/ivlogo"
                app:layout_constraintTop_toTopOf="@+id/ivlogo" />

            <TextView
                android:id="@+id/tvjobtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/textdesign"
                android:padding="5dp"
                android:text="Full time"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@+id/ivlogo"
                app:layout_constraintTop_toBottomOf="@+id/tvjobtitle" />

            <TextView
                android:id="@+id/tvregion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@drawable/textdesign"
                android:padding="5dp"
                android:text="$100000-$12000"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvjobtype"
                app:layout_constraintStart_toEndOf="@+id/tvjobtype"
                app:layout_constraintTop_toTopOf="@+id/tvjobtype"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/tvcompanyname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="prospect"
                android:textSize="15sp"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="@+id/ivlogo"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/ivlogo"
                app:layout_constraintTop_toBottomOf="@+id/ivlogo" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>